  <% @posts.each do |post| %>

  <h2><%= link_to post.title, post %></h2>
  <p><%= post.content %></p>
  <p><%= link_to "Edit Post", edit_post_path(post) %>
     <%= link_to "Delete this Post", post, confirm: "Sure? Once it's gone, it's gone!", method: :delete %></p>
     <small><%= post.created_at %></small>
  <hr />

  <% end %>

<p><%= link_to "Add a New Post", new_post_path %></p>